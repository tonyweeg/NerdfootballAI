{
  "rules": {
    "liveScores": {
      "2025": {
        ".read": true,
        "$week": {
          ".read": true,
          ".write": "auth != null && auth.token.admin === true",
          "games": {
            "$gameId": {
              ".read": true,
              ".write": "auth != null && auth.token.admin === true"
            }
          }
        }
      }
    },
    "presence": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    }
  }
}