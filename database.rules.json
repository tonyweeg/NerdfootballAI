{
  "rules": {
    "liveScores": {
      "2025": {
        ".read": true,
        "week$num": {
          ".read": true,
          ".write": "auth != null && auth.token.admin === true",
          "games": {
            "$gameId": {
              ".read": true,
              ".write": "auth != null && auth.token.admin === true",
              ".validate": "newData.hasChildren(['awayScore', 'homeScore', 'status'])"
            }
          }
        }
      }
    },
    "presence": {
      "$uid": {
        ".read": true,
        ".write": "$uid === auth.uid"
      }
    },
    ".info": {
      "connected": {
        ".read": true
      }
    }
  }
}