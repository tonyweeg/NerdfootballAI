{
  "name": "nerdfootball-ai-tests",
  "version": "1.0.0",
  "description": "Browser testing suite for NerdfootballAI",
  "scripts": {
    "test": "jest",
    "test:browser": "jest --config jest.puppeteer.config.js",
    "test:core": "jest --config jest.puppeteer.config.js --testPathIgnorePatterns='oauth|temp-disabled'",
    "test:headful": "HEADLESS=false jest --config jest.puppeteer.config.js",
    "test:debug": "DEBUG=true HEADLESS=false jest --config jest.puppeteer.config.js",
    "test:oauth": "jest --config jest.puppeteer.config.js --testPathPattern=oauth",
    "test:oauth:headful": "HEADLESS=false jest --config jest.puppeteer.config.js --testPathPattern=oauth",
    "test:oauth:debug": "DEBUG=true HEADLESS=false jest --config jest.puppeteer.config.js --testPathPattern=oauth",
    "test:oauth:new-user": "jest --config jest.puppeteer.config.js tests/oauth-new-user.test.js",
    "test:oauth:linking": "jest --config jest.puppeteer.config.js tests/oauth-account-linking.test.js",
    "test:oauth:login-behavior": "jest --config jest.puppeteer.config.js tests/oauth-login-behavior.test.js",
    "test:oauth:errors": "jest --config jest.puppeteer.config.js tests/oauth-error-scenarios.test.js",
    "test:oauth:security": "jest --config jest.puppeteer.config.js tests/oauth-security.test.js",
    "test:oauth:data-integrity": "jest --config jest.puppeteer.config.js tests/oauth-data-integrity.test.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "jest-puppeteer": "^10.0.1",
    "puppeteer": "^22.4.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "firebase-admin": "^13.5.0"
  }
}
